 {
  "manifest_version": 2,
  "name": "Hypify",
  "version": "1.01",
  "description": "Adds a magnifying glass button to hypemachine to check if the song exists in spotify's library.",
  "web_accessible_resources": ["hypestyles.css"],
  "background": {
    "page": "background.html"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "homepage_url": "http://ecmode.com",
  "icons": {
    "48": "./images/hype48.jpeg",
    "128": "./images/hype128.png"
  },
  "permissions": [
    "tabs",
    "http://hypem.com/",
    "http://hypem.com/*/",
    "http://www.hypem.com/",
    "http://www.hypem.com/*/",
    "http://*/", 
    "https://*/"
  ],
  "content_scripts":[
  {
	"matches": ["http://hypem.com/*", "https://hypem.com/*"], 
	"css": ["hypestyles.css"],
	"js": ["extension.js"],
	"run_at": "document_end"
  }
  ]
}
